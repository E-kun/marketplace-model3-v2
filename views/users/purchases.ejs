<% layout('layouts/boilerplate')%>
<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-12 d-flex flex-column align-items-center justify-content-start">
            <div class="d-flex flex-column align-items-center justify-content-start" >
                <h1>Purchase History</h1>

                <% if(purchases.length === 0|| purchases == null) {%>
                    <h2>You have not bought anything yet!</h2>
                <%} else { %>

                <div class="d-grid gap-3 my-5">
                    <div class="card mb-3 mx-auto col-md-auto border border-dark" style="width: 60rem;">
                        <div class="row">
                            <div class="col">
                                <h5>Resource Name</h5>
                            </div>
                            <div class="col">
                                <h5>Amount Paid</h2>
                            </div>
                            <div class="col">
                                <h5>Date Purchased</h2>
                            </div>
                            <div class="col">
                                <h5>File Download</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-grid gap-3">
                    <div class="card mb-3 mx-auto col-md-auto border border-dark" style="width: 60rem;">
                        <% for(let purchase of purchases){ %> 
                        <div class="row">
                            <div class="col">
                                <h5><%=purchase.name%></h5>
                            </div>
                            <div class="col">
                                <h5>$<%=purchase.price%></h5>
                            </div>
                            <div class="col">
                                <h5><%=purchase.purchaseDate%></h5>
                            </div>
                            <div class="col">
                                <a class="btn btn-primary" href=<%=purchase.file%>>Download</a>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>

                <% } %> 
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>