<% layout('layouts/boilerplate')%>

<form action="/register" method="POST" class="validated-form" novalidate>
  <h1 class="mb-3 mx-auto col-8 me-auto">Sign Up</h1>
  <div class="mb-3 mx-auto col-8 me-auto">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback"></div>
    <div class="invalid-feedback">Please enter a username.</div>
  </div>
  <div class="mb-3 mx-auto col-8 me-auto">
    <label class="form-label" for="email">Email</label>
    <input class="form-control" type="email" id="email" name="email" required />
    <div class="valid-feedback"></div>
    <div class="invalid-feedback">Please enter a valid email address.</div>
  </div>
  <div class="mb-3 mx-auto col-8 me-auto">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback"></div>
    <div class="invalid-feedback">Entered password is not valid.</div>
  </div>
  <div class="mb-3 mx-auto col-8 me-auto">
    <label class="form-label" for="firstName">First Name</label>
    <input
      class="form-control"
      type="text"
      id="firstName"
      name="firstName"
      required
    />
    <div class="valid-feedback"></div>
    <div class="invalid-feedback">Please enter your first name.</div>
  </div>
  <div class="mb-3 mx-auto col-8 me-auto">
    <label class="form-label" for="lastName">Last Name</label>
    <input
      class="form-control"
      type="text"
      id="lastName"
      name="lastName"
      required
    />
    <div class="valid-feedback"></div>
    <div class="invalid-feedback">Please enter your last name.</div>
  </div>
  <div class="mb-3 mx-auto col-8 me-auto">
    <label class="form-label" for="location">Location</label>
    <select
      class="form-select"
      type="text"
      id="location"
      name="location"
      aria-label="Location select"
    >
      <option selected>Select a location</option>
      <option value="Malaysia">Malaysia</option>
      <option value="Singapore">Singapore</option>
      <option value="Australia">Australia</option>
      <option value="Indonesia">Indonesia</option>
    </select>
  </div>

  <div class="mb-3 mx-auto col-8 me-auto">
    <button class="btn btn-success">Register</button>
  </div>
</form>
