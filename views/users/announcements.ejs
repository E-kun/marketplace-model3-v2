<% layout('layouts/boilerplate')%>

<form action="/catalogue/<%=resource._id%>?_method=PUT" method="POST" class="validated-form" novalidate>
    <div class="mb-3 mx-auto col-8 me-auto">
        <h2>Create New Announcement</h2>
    </div>
    <div class="mb-3 mx-auto col-8 me-auto">
        <input type="text" class="form-control" id="announcement-title" placeholder="Announcement Title" aria-describedby="announcementTitle">
        <div class="valid-feedback">
        </div>
        <div class="invalid-feedback">
        </div>
    </div>
    <div class="mb-3 mx-auto col-8 me-auto">
        <textarea class="form-control" placeholder="Announcement Content" id="floatingTextarea"></textarea>
        <div class="valid-feedback">
        </div>
        <div class="invalid-feedback">
        </div>
    </div>
    <div class="mb-3 mx-auto col-8 me-auto">
        <button type="submit" class="btn btn-primary">Submit Comment</button> 
    </div>
</form>